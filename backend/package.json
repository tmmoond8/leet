{
  "name": "newv_back",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/tmmoond8/newv.git",
  "author": "tmmoond8",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.2.1",
    "axios": "^0.21.1",
    "dotenv": "^8.0.0",
    "graphql-middleware": "^3.0.2",
    "graphql-tools": "^4.0.5",
    "graphql-yoga": "^1.18.0",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.5.8",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.0.10",
    "copyfiles": "^2.1.1",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "copy-graphql": "cp src/schema.graphql dist/api",
    "clean": "rimraf dist",
    "build": "tsc",
    "prebuild": "yarn clean",
    "postbuild": "yarn copy-graphql",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql ./src/api/*/*/*.graphql",
    "start": "NODE_ENV=production pm2 start dist/index.js --name newv-backend",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "test": "jest"
  }
}
